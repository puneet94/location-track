												- var hide_message = "hide"
											p.text-danger(class = hide_message ) #{message}
											.form-group
												//- label(for='username') Username
												input#inputUsernameEmail.form-control(placeholder="Username", type='text', name='username')
											.form-group
												//- label(for='password') Password
												input#inputPassword.form-control(placeholder="Password", type='password', name='password')
											.form-group
												button.btn.btn-primary.btn-block(type='submit') Log in
									.forgot-password-text.text-center
										span Forgot your password, 
											a(href="#") click here;
									.create-new-account-text.text-center
										a(href='/signup') Create New Account
												
