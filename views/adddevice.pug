	style.
		body{
			  background: url(icon/bg_blurr.png) no-repeat center center fixed; 
			  background-size:cover;
			  background-color:rgba(255,255,255,0.5);
			  


		}
		.account-box{
		border:1px solid gray;
		}
	body
		// Preloader
		#preloader
			#status Â 
		.container
			#login-wrapper
				.row
					.col-md-4(style="position:relative; left:33.3%;")
						#logo-login
							h1
								| ADD DEVICE
				.row
					.col-md-4(style="position:relative; left:33.3%;")
						.account-box
							form(role='form', action="", method="POST")
								if message
									p.text-danger #{message}
								.form-group
									label(for="group") Select Group :
									select(type="select", name="group", class="form-control", required)
						 
										for g in groups
											option(value=g.group_name) #{g.group_name} 
									label(for="deviceid") IMEI : 
									input.form-control(type="text", name="imei", required)
									label(for="driver_name") User Name : 
									input.form-control(type="text", name="user_name", required)
									label(for="driver_age") DOB : 
									input.form-control(type="date", name="DOB", required)
									label(for="driver_weight") Weight in Kgs: 
									input.form-control(type="number", name="weight", required)
									label(for="driver_height") Height in cms: 
									input.form-control(type="number", name="height", required)
									label(for="contact_number") Contact Number : 
									input.form-control(type="text", name="contact_number", required)
									label(for="emergency_contact") Emergency Contact Number : 
									input.form-control(type="text", name="emergency_contact", required)
									label(for="additional_details") Additional Details : 
									input.form-control(type="text", name="additional_details", required)

								
								button.btn.btn.btn-primary.pull-right(type='submit')
									| Add Device
								button.btn.btn.btn-danger.pull-right#cancelBack(style="margin-right:3px;")
									| Cancel
							br
							br
							
		
		
			
