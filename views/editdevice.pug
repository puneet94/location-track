	style.
		html{
			  background: url(icon/bg.png) no-repeat center center fixed; 
			  background-size:cover;
		}
		.account-box{
		border:1px solid gray;
		}
	body
		// Preloader
		#preloader
			#status Â 
		.container
			#login-wrapper
				.row
					.col-md-4(style="position:relative; left:33.3%;")
						#logo-login
							h1
								| EDIT DEVICE
				.row
					.col-md-4(style="position:relative; left:33.3%;")
						.account-box
							form(role='form', action="", method="POST")
								.form-group
									label(for="group") Select Group :
									select(type="select", name="group_name" class="form-control", required)
						 
										for g in groups
											option(value=g.group_name, selected=(g.group_name==device.group_name ? true : false)) #{g.group_name} 
									label(for="fence") Select Fence :
									select(type="select", name="fence" class="form-control")
						 				
										for f in fence
											option(value=f._id, selected=(f._id==device.fence ? true : false)) #{f.fenceName} 
										option(value="") #{"None"} 
									label(for="imei") IMEI : 
									input.form-control(type="text", name="imei", value=device.imei, required, id="imei", readonly)

									label(for="member_name") User Name : 
									input.form-control(type="text", name="member_name",  value=device.member_name, required, id="member_name")

									label(for="member_dob") DOB : 
									input.form-control(type="date", name="dob", required, value=device.dob, id="member_dob")

									label(for="member_age") Age : 
									input.form-control(type="number", name="age", required, value=device.age, id="member_age")

									label(for="contact_number") Contact Number : 
									input.form-control(type="text", name="contact_number", required, value=device.contact_number, id="contact_number")

									label(for="emergency_contact") Emergency Contact Number : 
									input.form-control(type="text", name="emergency_contact_number", required, value=device.emergency_contact_number, id="emergency_contact")

									label(for="additional_details") Additional Details : 
									input.form-control(type="text", name="additional_details",value=device.additional_details, id="additional_details")

								button.btn.btn.btn-primary.pull-right(type='submit')
									| Edit
